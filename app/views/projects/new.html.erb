<div class="container d-flex justify-content-around">
  <div class="card new-project-card p-3 mb-4 mt-4">
<h1>Create a New Project</h1>
<%= simple_form_for(@project) do |f| %>
    <span class="form-name"><%= f.input :name, label: "Project Name" %></span>
    <span class="form-description"><%= f.label :name, "Example: Moonshot - A Unity Adventure Game" %></span>
    <span class="form-name"><%= f.input :description, required: true, label: "Project Details", :input_html => {:rows => 10} %></span>
    <span class="form-description"><%= f.label :description, "A detailed description of your project's content, goals, and who you wish to recruit." %></span>
    <span class="form-name"><%= f.input :photo, as: :file, required: true %></span>
    <span class="form-name"><%= f.label :tag_list, "What kind of developer do you need?" %></span>

<%= f.input :tag_list, label: false, collection: [ "Unity 2D Developer", "Unity 3D Developer", "Game Programmer", "2D Graphic Designer", "3D Graphic Designer", "Sound Designer", "Musician", "Script Writer", "Level Designer", "Unreal Engine Developer" ], input_html: {class: "select2", multiple: "multiple", style: 'width: 655px'} %>



    <div class="d-flex justify-content-around"><%= f.submit "Create a new project", class: "btn btn-primary" %></div>


  <% end %>
</div>

</div>
